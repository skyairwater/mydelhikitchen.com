@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Delhi Kitchen</title>
    <link rel="icon" type="image/svg+xml" href="~/favicon.svg" asp-append-version="true" />
    <meta name="description" content="Authentic Indian Food, Groceries, and Catering in Charlotte, NC. Discover the best Indian flavors at Delhi Kitchen." />
    <meta name="keywords" content="delhi kitchen, charlotte, indian food, best indian food in charlotte, indian groceries charlotte, north indian food charlotte, indian catering" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://mydelhikitchen.com/" />
    <meta property="og:title" content="Delhi Kitchen - Authentic Indian Food & Groceries in Charlotte" />
    <meta property="og:description" content="Pure vegetarian, prepared fresh daily, delivery at your door steps, lowest price in charlotte!" />
    <meta property="og:image" content="~/images/delhikitchenlogo.png" />
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EcommerceStore.styles.css" asp-append-version="true" />
    <script>
        (function () {
            const theme = localStorage.getItem('theme') || 'light';
            document.documentElement.setAttribute('data-bs-theme', theme);
        })();
    </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md border-bottom box-shadow mb-3 fixed-top shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Delhi Kitchen</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbarCollapse" aria-controls="mainNavbarCollapse"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-md-inline-flex justify-content-between" id="mainNavbarCollapse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Groceries">Groceries</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Food">Food</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Catering">Catering</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        @if (User.HasClaim("IsAdmin", "True"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Manage Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Categories" asp-action="Index">Manage Categories</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Orders" asp-action="AdminIndex">Manage Orders</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center me-3 border-end pe-3">
                        <button class="btn btn-link nav-link px-2 me-2" id="theme-toggle" title="Toggle Theme" style="color: inherit;">
                            <i class="bi bi-sun-fill" id="theme-icon-light"></i>
                            <i class="bi bi-moon-stars-fill" id="theme-icon-dark" style="display:none;"></i>
                        </button>
                        <button class="btn btn-outline-light position-relative p-1 px-2 border-0" data-bs-toggle="modal" data-bs-target="#cart-modal" id="cart-btn" style="color: inherit; border-color: currentColor !important;">
                            <i class="bi bi-cart3 fs-4"></i>
                            <span id="cart-badge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="display: none;">
                                0
                            </span>
                        </button>
                    </div>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - MyDelhiKitchen.com - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Shopping Cart Modal -->
    <div class="modal fade" id="cart-modal" tabindex="-1" aria-labelledby="cartModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content shadow-lg border-0">
                <div class="modal-header border-bottom-0 pb-0">
                    <h5 class="modal-title fw-bold" id="cartModalLabel">Your Cart</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body py-3">
                    <div id="cart-items-container">
                        <!-- Cart items will be rendered here -->
                    </div>
                </div>
                <div class="modal-footer border-top-0 pt-0" id="cart-modal-footer">
                    <div class="w-100">
                        <div class="d-flex justify-content-between h5 fw-bold mb-3">
                            <span>Total:</span>
                            <span id="cart-modal-total">$0.00</span>
                        </div>
                        <button type="button" class="btn btn-dark w-100 py-2 rounded-3 fw-bold" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#checkoutModal">Checkout</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Confirm Empty Cart Modal -->
    <div class="modal fade" id="confirm-empty-cart-modal" tabindex="-1" aria-hidden="true" style="z-index: 1060;">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content shadow border-0 text-center">
                <div class="modal-body py-4">
                    <i class="bi bi-trash3 text-danger mb-3 d-block" style="font-size: 3rem;"></i>
                    <h5 class="fw-bold">Empty your cart?</h5>
                    <p class="text-muted small">This will remove all items from your order summary.</p>
                    <div class="d-grid gap-2 mt-4">
                        <button type="button" class="btn btn-danger py-2 fw-bold" id="confirm-clear-cart">Yes, Empty Cart</button>
                        <button type="button" class="btn btn-link text-muted btn-sm text-decoration-none" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Google Maps API for Autocomplete -->
    <script src="https://maps.googleapis.com/maps/api/js?key=@(Configuration["GoogleMaps:ApiKey"])&libraries=places"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
