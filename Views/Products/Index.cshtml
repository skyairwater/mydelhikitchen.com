@model IEnumerable<EcommerceStore.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Products</h2>
        <a asp-action="Create" class="btn btn-primary">Add Product</a>
    </div>

    <table class="table table-hover shadow-sm bg-white rounded align-middle">
        <thead class="table-light">
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Status</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageFileName)) {
                        <img src="~/images/@item.ImageFileName" class="rounded" style="width: 50px; height: 50px; object-fit: cover;" alt="@item.Name" />
                    } else {
                        <div class="bg-light rounded text-center" style="width: 50px; height: 50px; line-height: 50px; font-size: 10px;">No Img</div>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                <td>@item.Price.ToString("C")</td>
                <td>
                    <span class="badge @(item.IsActive ? "bg-success" : "bg-secondary")">
                        @(item.IsActive ? "Active" : "Inactive")
                    </span>
                </td>
                <td class="text-end">
                    <div class="btn-group btn-group-sm">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Edit</a>
                        <form asp-action="ToggleStatus" asp-route-id="@item.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn @(item.IsActive ? "btn-outline-warning" : "btn-outline-success")">
                                @(item.IsActive ? "Deactivate" : "Activate")
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
}
        </tbody>
    </table>
</div>
