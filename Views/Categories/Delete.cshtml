@model EcommerceStore.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Delete Category</h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.ProductCount > 0)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-octagon-fill me-2"></i>
                            <strong>Cannot Delete:</strong> This category contains @ViewBag.ProductCount products.
                            Please reassign or deactivate all products within this category before deleting it.
                        </div>
                    }
                    else
                    {
                        <h5 class="text-danger fw-bold mb-3">Are you sure you want to delete this?</h5>
                    }
                    
                    <p class="lead">Category: <strong>@Model.Name</strong></p>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2">
                            @if (ViewBag.ProductCount == 0)
                            {
                                <button type="submit" class="btn btn-danger">Delete Category</button>
                            }
                            else
                            {
                                <button type="button" class="btn btn-secondary disabled">Deletion Blocked (Products Exist)</button>
                            }
                            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
