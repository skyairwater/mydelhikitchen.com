@{
    ViewData["Title"] = "Home";
}

<style>
    :root {
        
        --gold: #d7b56d;
        --text: black;
    }
    
    .wrap {
        text-align: center;
        transform: translateY(6px);
    }

    /* Title */
    .title {
        margin: 0;
        font-size: clamp(42px, 6vw, 84px);
        color: var(--text);
        font-weight: 400;
        letter-spacing: 0.35em;
        text-transform: uppercase;
        opacity: 0;
        transform: translateY(22px);
        filter: blur(6px);
        transition: opacity 1.2s ease, transform 1.2s ease, filter 1.2s ease, letter-spacing 1.6s ease;
    }

    /* Underline stroke */
    .rule {
        width: 0;
        height: 1px;
        margin: 18px auto 0;
        background: linear-gradient(90deg, transparent, var(--gold), transparent);
        opacity: 0;
        transition: width 1.2s ease, opacity 1.2s ease;
        max-width: 520px;
    }

    /* Small tagline (optional but elegant) */
    .tagline {
        margin: 14px 0 0;
        font-family: Arial, sans-serif;
        font-size: 12px;
        letter-spacing: 0.35em;
        text-transform: uppercase;
        color: blue;
        opacity: 0;
        transform: translateY(10px);
        transition: opacity 1s ease, transform 1s ease;
    }

    /* Activated state */
    .show .title {
        opacity: 1;
        transform: translateY(0);
        filter: blur(0);
        letter-spacing: 0.22em;
    }

    .show .rule {
        width: min(70vw, 520px);
        opacity: 1;
        transition-delay: 0.35s;
    }

    .show .tagline {
        opacity: 1;
        transform: translateY(0);
        transition-delay: 0.75s;
    }

    /* Gentle “candle glow” shimmer */
    .glow {
        position: absolute;
        width: 520px;
        height: 520px;
        border-radius: 50%;
        background: radial-gradient(circle, rgba(215,181,109,0.14), transparent 60%);
        filter: blur(10px);
        animation: drift 6s ease-in-out infinite;
        pointer-events: none;
        opacity: 0.7;
    }

    @@keyframes drift {
        0%, 100% {
            transform: translate(-10px, -8px) scale(1);
        }

        50% {
            transform: translate(14px, 10px) scale(1.03);
        }
    }

    /* Respect reduced motion */
    @@media (prefers-reduced-motion: reduce) {
        .title, .rule, .tagline, .glow {
            animation: none !important;
            transition: none !important;
        }

        .title, .tagline {
            opacity: 1;
            transform: none;
            filter: none;
        }

        .rule {
            width: min(70vw, 520px);
            opacity: 1;
        }
    }
</style>

<div class="glow" aria-hidden="true"></div>

<div class="wrap" id="wrap">
    <h1 class="title">Delhi Kitchen</h1>
    <div class="rule"></div>
    <p class="tagline">Cloud Kitchen • Since 2026</p>
</div>

<script>
    window.addEventListener("load", () => {
      // small delay makes it feel more "premium"
      setTimeout(() => document.getElementById("wrap").classList.add("show"), 120);
    });
</script>


